		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-ms-flex-direction: column;
		flex-direction: column;
		word-wrap: break-word;
		background-color: #fff;
		background-clip: border-box;
	}

	.attribute-footer {
		display: flex;
		justify-content: end;
		padding: 0.75rem 0;
	}

	.attribute-arrow {
		transition: all 0.5s;
		cursor: pointer;
	}

	.attribute-arrow-expand {transform: rotate(180deg)}
	.attribute-arrow-collapse {transform: rotate(0deg)}

	.attribute-body {
		transition: all 0.5s;
		max-height: 100%;
		opacity: 1;
		display: flex;
		flex-direction: column;
		
	}

	.attribute-body-collapse {

		max-height: 0;
		opacity: 0;
		z-index: -1;
	}

	.attribute-body.attribute-price-body {
		padding: 0 1.25rem;
	}

	.attribute-body input.form-control {
		padding: 5px;
	}

	.icon-control {
		margin-top: 6px;
		float: right;
		font-size: 80%;
	}

	.checkbox-btn {
		position: relative;
	}

	.checkbox-btn input {
		position: absolute;
		z-index: -1;
		opacity: 0;
	}

	.checkbox-btn input:checked ~ .btn {
		border-color: #000;
		background-color: #000;
		color: #fff;
	}

	.custom-control {
		position: relative;
		display: block;
		min-height: 1.5rem;
		padding-left: 1.5rem;
	}



	.attribute-label-hidden {
		max-height: 0;
		opacity: 0;
	}

	.attribute-image {
		width: auto;
		max-width: 50px;
		max-height: 24px;
	}

	.attribute-color {
		padding: 7px;
		border-radius: 50%;
		margin: 0 0.25rem 0 0;
	}

	.attribute-color, .attribute-image {
