{% if cat | length > 0 %}
    {% if cat | length > 2 %}
        <div class="splide px-10 pt-5 {{ cat | length > 5 ? 'lg:block': 'lg:hidden' }}" id="cat-category">
            <div class="splide__arrows">
                <button aria-label="prevoius" class="splide__arrow splide__arrow--prev !-right-px !w-[24px] lg:!w-[30px] bg-[#d6d6d6] !rounded !p-1.5">
                <svg class="flickity-button-icon text-primary h-4" fill="currentColor" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                </button>
                <button aria-label="next" class="splide__arrow splide__arrow--next !-left-px !w-[24px] lg:!w-[30px] bg-[#d6d6d6] !rounded !p-1.5">
                <svg class="flickity-button-icon text-primary h-4" fill="currentColor" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                </button>
            </div>
            <div class="splide__track">
                <ul class="splide__list h-auto">
                {% for item in cat %}
                <li class="splide__slide">
                    <a href="{{ item.url }}" class="flex flex-col items-center">
                    <img src="{{ item.image }}" alt="" loading="lazy" class="object-cover">
                    <p class="pt-2 text-sm text-center">{{item.name}}</p>
                    </a>
                </li>
                {% endfor %}
                </ul>
            </div>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                new Splide(document.getElementById('cat-category'), {
                    type   : 'slide',
                    direction: 'rtl',
                    perPage: 5,
                    autoplay: true,
                    perMove:1,
                    arrows: true,
                    gap:"1rem",
                    pagination: false,
                    breakpoints: {
                    720: {
                        perPage: 2,
                    },
                    991: {
                        perPage: 4,
                    }
                    }
                }).mount();
            });
        </script>
        {% if cat | length <= 5 %}
        <div class="lg:flex hidden gap-6 justify-center items-center mt-6">
            {% for item in cat %}
                <a href="{{ item.url }}" class="flex flex-col items-center lg:w-1/5 md:w-1/3 w-1/2">
                    <img src="{{ item.image }}" alt="{{ item.name }}" loading="lazy" class="object-contain">
                    <p class="py-2 text-center text-sm h-12 overflow-hidden">{{ item.name }}</p>
                </a>
            {% endfor %}
        </div>
        {% endif %}
    {% else %}
        <div class="flex flex-wrap justify-center items-center mt-6">
            {% for item in cat %}
                <a href="{{ item.url }}" class="lg:p-8 p-4 flex flex-col items-center lg:w-1/5 md:w-1/3 w-1/2">
                    <img src="{{ item.image }}" alt="{{ item.name }}" loading="lazy" class="object-contain">
                    <p class="py-2 text-center text-sm h-12 overflow-hidden">{{ item.name }}</p>
                </a>
            {% endfor %}
        </div>
    {% endif %}
    
{% endif %}