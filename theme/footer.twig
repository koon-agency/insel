<footer class="footer !bg-black w-full pt-6">
  <div class="max-w-[85rem] mx-auto px-4 pb-6">
    <div class="flex justify-between items-center max-md:flex-col pb-10">
      <div class="flex flex-col gap-3 justify-center max-md:items-center w-full max-w-lg">
        <h2 class="text-white text-lg font-medium uppercase">{{ locals.newsletter }}</h2>
        <form class="flex justify-center ltr:flex-row-reverse w-full" action="" method="post">
            <button aria-label="submit" type="submit" class="bg-white text-black rounded-r px-4 py-1.5 uppercase font-medium">{{ locals.subscribe }}</button>
            <input type="email" class="rounded-l border px-2 bg-[#464646] w-full" style="outline:none;" placeholder="{{ locals.email_address }}"/>
        </form>
      </div>
      <div class="max-md:pt-6">
        <h5 class="text-white text-lg font-medium uppercase ltr:tracking-wider text-center pb-2.5">{{ locals.followus }}</h5>
        <ul class="flex justify-center items-center gap-10">
            <li><a href="https://pin.it/40DYynb" target="_blank" class="footer-icon w-full h-full block"><i class="text-2xl fa-brands fa-pinterest-p text-white"></i></a></li>
            <li><a href="https://www.instagram.com/insel.sa/" target="_blank" class="footer-icon w-full h-full block"><i class="text-2xl fa-brands fa-instagram text-white"></i></a></li>
            <li><a href="https://twitter.com/insel_sa" target="_blank" class="footer-icon w-full h-full block"><i class="text-2xl fab fa-twitter text-white"></i></a></li>
            <li><a href="https://www.facebook.com/insel.sa1/" target="_blank" class="footer-icon w-full h-full block"><i class="text-2xl fab fa-facebook-f text-white"></i></a></li>
        </ul>
      </div>
    </div>
    <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 items-baseline lg:gap-0 gap-4">
        <div class="flex flex-col flex-grow w-full rtl:text-right">
          <h5 class="text-white lg:text-xl font-bold text-lg border-b border-b-whiteColor-500 pb-2.5 uppercase ltr:font-medium">
              {{ settings.links_1_title }}
          </h5>
          <ul class="grid grid-cols-1 gap-2 py-3 !mb-0">
              {% for link in settings.links_1_links %}
              <li>
                  <a class="text-white footer-item text-sm !no-underline" href="{{ link.url }}">{{ link.title }}</a>
              </li>
              {% endfor %}
          </ul>
        </div>
        <div class="md:block hidden">
          <div class="flex flex-col rtl:text-right">
              <h5 class="text-white lg:text-xl font-bold text-lg border-b border-b-whiteColor-500 pb-2.5 uppercase ltr:font-medium">
              {{ settings.pages_title }}
              </h5>
              <ul class="grid grid-cols-1 gap-2 pt-3">
              {% for link in settings.pages_links %}
                  <li>
                      <a class="text-white footer-item text-sm !no-underline" href="{{ link.url }}">{{ link.title }}</a>
                  </li>
              {% endfor %}
              </ul>
          </div>
        </div>
