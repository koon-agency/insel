    function cart() {
      return {
        count: "0",
        init() {
          zid.store.cart.fetch().then(
            function (response) {
              this.count =
                response.data.cart.products_count > 0
                  ? response.data.cart.products_count
                  : 0;
            }.bind(this)
          );
        },
      };
    }
