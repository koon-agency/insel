<section class="gallery bg-whiteColor-400 py-10">
    <h2 class="text-grayColor lg:text-3xl text-xl text-center ltr:font-light section-title">{{ settings.title }}</h2>
    <div class="max-w-6xl mx-auto lg:px-2 px-4">
        <div class="grid lg:grid-cols-3 grid-cols-2 lg:gap-6 gap-4 justify-center items-center">
            {% for item in settings.gallery %}
                <a href="{{ item.url ? item.url : '/'}}" class="w-full group transition">
                    <div class="w-full h-full overflow-hidden">
                    <img class="w-full h-full p-2 transition duration-300 md:group-hover:scale-110" src="{{ imageUrl(item.image) }}"alt="{{  item.title }}">
                    </div>
                    <p class="text-primay text-center ltr:font-light pt-2 text-lg">{{ item.title }}</p>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
