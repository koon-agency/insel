<section class="mx-auto px-2 max-w-6xl py-10">
    <div class="flex lg:flex-row flex-col">
        <div class="lg:basis-2/3">
            <img class="w-full h-full" src="{{ imageUrl(settings.image) }}"alt="{{  settings.title }}">
        </div>
        <div class="p-4 bg-whiteColor-400 flex flex-col gap-2 justify-center lg:basis-1/3">
            <h3 class="font-bold lg:text-2xl text-xl ltr:font-normal">{{ settings.title }}</h3>
            <p>{{ settings.description }}</p>
            <a href="{{ settings.url ? settings.url : '/'}}" class="mt-2 w-fit px-6 py-2 bg-primary text-white border border-primary hover:bg-white hover:text-primary font-bold text-center transition duration-300">{{ settings.urlTitle }}</a>
        </div>
    </div>
</section>
{% schema %}
{
  "name": {
    "ar": "بطاقة",
    "en": "card"
  },
  "icon": "fal fa-images",
  "display": true,
  "settings": {
    "title": {
      "type": "text",
      "label": {
        "ar": "العنوان",
        "en": "text"
      }
    },
    "image": {
        "type": "image",
        "label": {
        "ar": "الصورة",
        "en": "Image"
        },
        "info": {
        "ar": "ارفع صورة بحجم 750 * 750 ",
        "en": "This is an info text sample here"
        }
    },
    "description": {
      "type": "textarea",
      "label": {
        "ar": "النص",
        "en": "Text"
      }
    },
    "url": {
        "type": "url",
        "label": {
        "ar": "الرابط",
        "en": "Link"
      }
    },
    "urlTitle": {
        "type": "text",
        "label": {
        "ar": "عنوان الرابط",
        "en": "Link title"
      }
    }
  }
}
{% endschema %}
