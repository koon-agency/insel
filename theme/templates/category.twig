{% extends "layout.twig" %}

{% block title %} {{ category.name }} {% endblock %}

{% block header %} {{ include('header.twig') }} {% endblock %}

{% block main_content %}
    <ul class="flex items-center gap-2 py-4 px-8 text-sm max-sm:justify-center border-y border-y-[#f0f0f0] flex-wrap capitalize">
        <li><a href="/">{{ locals.home.title }}</a></li>|
        {% if category.parent_category.parent_category %}
            <li><a href="{{ category.parent_category.parent_category.url }}">{{ category.parent_category.parent_category.name }}</a></li>|
        {% endif %}

        {% if category.parent_category %}
            <li><a href="{{ category.parent_category.url }}">{{ category.parent_category.name }}</a></li>|
        {% endif %}
        <li><a href="{{ categories.url }}" class="font-semibold">{{ category.name }}</a></li>    
    </ul>

    {% if 'brands' in category.url %}
        {% include 'brands-category.twig' with {'category' : category} %}
    {% else %}
    <section class="max-w-7xl mx-auto md:px-8 lg:px-14 px-4">
        <div class="flex flex-col gap-3 justify-center items-center">
            
            {% include 'sort-filter.twig' with { 'products' : products } %}

            
            <h2 class="text-black font-semibold text-xl lg:text-2xl pb-2">{{ category.name }}</h2>
            {% if 'DESCRIPTION' in category.description %}
                {% if 'TITLE' in category.description %}
                    <div class="flex flex-col md:flex-row ltr:md:flex-row-reverse min-h-[200px]" x-data="{ parts: splitText(`{{ category.description | raw }}`) }">
                        <div class="basis-1/2 object-cover h-auto" x-html="parts[0]"></div>
                        <div class="basis-1/2 bg-whiteColor-700 md:px-10 md:py-0 p-4 flex flex-col gap-4 justify-center h-auto" x-html="parts.slice(1).join('')"></div>
                    </div>
                {% else %}
                    <div class="flex flex-col md:flex-row ltr:md:flex-row-reverse min-h-[200px]" x-data="{ parts: splitText(`{{ category.description | raw }}`) }">
                        <div class="basis-1/4 object-contain h-auto md:p-6 p-14"><img class="w-full h-full" src="{{ category.image }}" alt="{{ category.name }}"></div>
                        <div class="basis-3/4 bg-whiteColor-700 md:px-10 md:py-0 p-4 flex flex-col gap-4 justify-center h-auto">
                            <p class="lg:text-2xl text-lg ltr:italic cat capitalize">{{ category.name }}</p>
                            <p class="md:text-base text-sm" x-html="parts[0]"></p>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <p class="lg:text-base text-sm opacity-60 text-center max-w-3xl">{{ category.description }}</p>
            {% endif %}
                 <script>
            function splitText(text) {
                const parts = text.split(/__(\w+)__/).filter(Boolean);
                const result = [];
                for (let i = 0; i < parts.length; i += 2) {
                    const key = parts[i];
                    const value = parts[i + 1];
                    switch (key) {
                        case 'TITLE':
                            result.push(`<p class="cat lg:text-2xl text-lg ltr:italic capitalize">${value}</p>`);
                            break;
                        case 'DESCRIPTION':
                            result.push(`<p class="md:text-base text-sm">${value}</p>`);
                            break;
                        case 'BANNER':
                            result.unshift(`<img class="banner w-full h-full" src="${value}" alt="Banner">`);
                            break;
                    }
                }
                return result;
            }
        </script>

        </div>
        {% if category.sub_categories | length > 0 %}
            {% if category.sub_categories | length > 5 %}
                <div class="splide" id="cat-category">
                    <div class="splide__arrows">
                        <button class="splide__arrow splide__arrow--prev !-right-px !w-[24px] lg:!w-[30px] bg-[#d6d6d6] !rounded !p-1.5">
                        <svg class="flickity-button-icon text-primary h-4" fill="currentColor" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                        </button>
                        <button class="splide__arrow splide__arrow--next !-left-px !w-[24px] lg:!w-[30px] bg-[#d6d6d6] !rounded !p-1.5">
                        <svg class="flickity-button-icon text-primary h-4" fill="currentColor" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                        </button>
                    </div>
                    <div class="splide__track">
                        <ul class="splide__list h-auto">
                        {% for item in category.sub_categories %}
                        <li class="splide__slide">
                            <a href="{{ item.url }}" class="lg:p-8 p-4 flex flex-col items-center">
                            <img src="{{ item.image }}" alt="" loading="lazy" class="object-cover">
                            <p class="py-2">{{item.name}}</p>
                            </a>
                        </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        new Splide(document.getElementById('cat-category'), {
                            type   : 'slide',
                            direction: 'rtl',
                            perPage: 5,
                            autoplay: true,
                            perMove:1,
                            arrows: true,
                            pagination: false,
                            breakpoints: {
                            720: {
                                perPage: 2,
                            },
                            991: {
                                perPage: 4,
                            }
                            }
                        }).mount();
                    });
                </script>
            {% else %}
                <div class="flex flex-wrap justify-center items-center mt-6">
                    {% for item in category.sub_categories %}
                        <a href="{{ item.url }}" class="lg:p-8 p-4 flex flex-col items-center lg:w-1/5 md:w-1/3 w-1/2">
                            <img src="{{ item.image }}" alt="{{ item.name }}" loading="lazy" class="object-contain">
                            <p class="py-2 text-center">{{ item.name }}</p>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
            
        {% endif %}
        <div class="py-14">
            <div  div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
                {% for product in products.data %}
                    {% include 'product-card.twig' with {'product' : product, 'index': key} %}
                {% endfor %}
            </div>
            {% include 'pagination.twig' with { 'totalPages' : products.last_page , 'currentPage' : products.current_page } %}

        </div>

    </section>
    {% endif %}

{% endblock %}
{% block footer %} {{ include('footer.twig') }} {% endblock %}
